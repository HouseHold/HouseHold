<div class="box box-primary">
    <div class="box-body box-profile">
        <img class="profile-user-img img-responsive img-circle"
             src="{% block profile_avatar %}{{ gravatar(app.user.email) }}{% endblock %}" alt="{{ 'User profile picture'|trans }}">
        <h3 class="profile-username text-center">{% block profile_fullname %}{{ app.user.profile.firstname }} {{ app.user.profile.lastname }}{% endblock %}</h3>
        <p class="text-muted text-center"></p>
    </div>
    <!-- /.box-body -->
</div>